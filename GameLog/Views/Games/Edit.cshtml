@model GameLog.Models.GameEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input asp-for="ReleaseYear" class="form-control" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagePath" class="control-label">Image filename</label>
                <input asp-for="ImagePath" class="form-control" placeholder="e.g. rdr2.jpg" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
                <small class="text-muted">Put the image file in wwwroot/images/games</small>
            </div>

            <div class="form-group mt-3">
                <label class="control-label">Genres</label>

                @foreach (var g in Model.AllGenres)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="SelectedGenreIds"
                               value="@g.Id"
                               @(Model.SelectedGenreIds.Contains(g.Id) ? "checked" : "") />
                        <label class="form-check-label">@g.Name</label>
                    </div>
                }
            </div>

            <div class="form-group mt-3">
                <label class="control-label">Platforms</label>

                @foreach (var p in Model.AllPlatforms)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="SelectedPlatformIds"
                               value="@p.Id"
                               @(Model.SelectedPlatformIds.Contains(p.Id) ? "checked" : "") />
                        <label class="form-check-label">@p.Name</label>
                    </div>
                }
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
