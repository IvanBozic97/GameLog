@model List<GameLog.Models.UserGameList>
@using GameLog.Models

@{
    ViewData["Title"] = "My List";
    GameStatus? selected = ViewBag.SelectedStatus as GameStatus?;
}

<h1>My List</h1>

<div class="mb-3">
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">All</a>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index" asp-route-status="@GameStatus.WantToPlay">Want to play</a>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index" asp-route-status="@GameStatus.Playing">Playing</a>
    <a class="btn btn-outline-secondary btn-sm" asp-action="Index" asp-route-status="@GameStatus.Played">Played</a>
</div>

@if (Model.Count == 0)
{
    <p>No games in your list yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Game</th>
                <th>Status</th>
                <th>Added</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Games" asp-action="Details" asp-route-id="@item.GameId">
                            @item.Game.Title
                        </a>
                    </td>
                    <td>@item.Status</td>
                    <td>@item.AddedAt.ToLocalTime()</td>
                    <td>
                        <form asp-action="Remove" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="gameId" value="@item.GameId" />
                            <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
